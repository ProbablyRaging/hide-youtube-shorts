{
    "name": "Hide YouTube Shorts",
    "manifest_version": 3,
    "version": "1.6.9",
    "description": "Block YouTube Shorts effortlessly with this powerful browser extension",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/",
        "https://m.youtube.com/"
    ],
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*",
                "https://m.youtube.com/*"
            ],
            "js": [
                "assets/main.js"
            ],
            "css": [
                "assets/styles.css"
            ]
        }
    ],
    "action": {
        "default_title": "Hide YouTube Shorts",
        "default_popup": "index.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon48.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}