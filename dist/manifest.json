{
    "name": "HYS BETA",
    "manifest_version": 3,
    "version": "0.0.1",
    "description": "This is a BETA release of Hide YouTube Shorts",
    "permissions": [
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Hide YouTube Shorts",
        "default_popup": "index.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon48.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}