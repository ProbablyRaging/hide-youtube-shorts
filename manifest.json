{
    "name": "Hide YouTube Shorts",
    "manifest_version": 3,
    "version": "1.3.2",
    "description": "Automatically hides all shorts videos everywhere that they appear on YouTube",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.youtube.com/"
    ],
    "background": {
        "service_worker": "src/scripts/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "src/scripts/main.js"
            ]
        }
    ],
    "action": {
        "default_title": "Hide YouTube Shorts",
        "default_popup": "src/views/popup.html"
    },
    "icons": {
        "16": "icon/icon16.png",
        "32": "icon/icon32.png",
        "48": "icon/icon48_store.png",
        "128": "icon/icon128.png"
    }
}