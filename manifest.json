{
    "name": "Hide YouTube Shorts",
    "manifest_version": 3,
    "version": "0.0.6",
    "description": "Automatically hides all YouTube Shorts videos on channel pages",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ],
    "background": {
        "service_worker": "src/scripts/background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Hide YouTube Shorts - Menu",
        "default_popup": "src/views/popup.html"
    },
    "icons": {
        "16": "icon/icon16.png",
        "32": "icon/icon32.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    }
}